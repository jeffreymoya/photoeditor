{
  "$schema": "https://json.schemastore.org/stryker-mutator",
  "testRunner": "jest",
  "coverageAnalysis": "perTest",
  "checkers": ["typescript"],
  "plugins": ["@stryker-mutator/typescript-checker", "@stryker-mutator/jest-runner"],
  "tsconfigFile": "tsconfig.jest.json",
  "ignorePatterns": ["dist/**", "tests/**"],
  "mutate": [
    "src/services/**/*.ts",
    "src/providers/**/*.ts",
    "!src/**/*.d.ts",
    "!src/**/index.ts",
    "!src/**/*.old.ts"
  ],
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 60
  },
  "reporters": ["progress", "clear-text", "html", "json"],
  "htmlReporter": {
    "fileName": "../../docs/evidence/mutation/index.html"
  },
  "jsonReporter": {
    "fileName": "../../docs/evidence/mutation/mutation-report.json"
  }
}

