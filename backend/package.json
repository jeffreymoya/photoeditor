{
  "name": "@photoeditor/backend",
  "version": "1.0.0",
  "description": "Backend services for photo editor application",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:lambdas": "npm run clean && npm run build:lambda:presign && npm run build:lambda:status && npm run build:lambda:worker",
    "build:lambda:presign": "esbuild src/lambdas/presign.ts --bundle --outdir=dist/lambdas/presign --platform=node --target=node20 --format=cjs --external:@aws-sdk/* --external:sharp --minify",
    "build:lambda:status": "esbuild src/lambdas/status.ts --bundle --outdir=dist/lambdas/status --platform=node --target=node20 --format=cjs --external:@aws-sdk/* --external:sharp --minify",
    "build:lambda:worker": "esbuild src/lambdas/worker.ts --bundle --outdir=dist/lambdas/worker --platform=node --target=node20 --format=cjs --external:@aws-sdk/* --external:sharp --minify",
    "dev": "tsc --watch",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:build": "jest tests/build",
    "test:unit": "jest tests/unit",
    "test:import": "jest tests/unit/lambdas/import-validation.test.js",
    "test:pre-e2e": "npm run test:build && npm run test:import",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^1.17.0",
    "@aws-lambda-powertools/metrics": "^1.17.0",
    "@aws-lambda-powertools/tracer": "^1.17.0",
    "@aws-sdk/client-dynamodb": "^3.478.0",
    "@aws-sdk/client-s3": "^3.478.0",
    "@aws-sdk/client-sns": "^3.478.0",
    "@aws-sdk/client-ssm": "^3.478.0",
    "@aws-sdk/s3-request-presigner": "^3.478.0",
    "@aws-sdk/util-dynamodb": "^3.478.0",
    "@photoeditor/shared": "file:../shared",
    "sharp": "^0.34.4",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.126",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "esbuild": "^0.19.12",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "photo-editor",
    "backend",
    "aws",
    "lambda",
    "serverless"
  ],
  "author": "",
  "license": "MIT"
}
