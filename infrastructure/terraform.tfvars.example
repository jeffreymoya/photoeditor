# Example Terraform variables file
# Copy this to terraform.tfvars and customize for your environment

# Required Variables
environment = "dev"

# Optional Variables (defaults shown)
project_name = "photo-editor"
region       = "us-east-1"

# S3 Configuration
temp_bucket_retention_days    = 2
final_bucket_transition_days  = 30
abort_multipart_days          = 7
enable_s3_lifecycle          = true

# Lambda Configuration
lambda_timeout           = 300
lambda_memory_size      = 1024
lambda_reserved_concurrency = 100

# DynamoDB Configuration
dynamodb_billing_mode = "ON_DEMAND"
job_ttl_days         = 90

# SQS Configuration
sqs_visibility_timeout     = 900
sqs_message_retention_days = 14
sqs_max_receive_count     = 3

# API Gateway Configuration
api_throttle_rate_limit  = 10000
api_throttle_burst_limit = 20000

# Monitoring Configuration
log_retention_days    = 90
enable_xray_tracing  = true

# Cost Management
monthly_budget_limit = 100
budget_notification_emails = [
  # "admin@example.com",
  # "devops@example.com"
]

# Provider Configuration
gemini_api_endpoint   = "https://generativelanguage.googleapis.com"
seedream_api_endpoint = "https://api.seedream.com"
enable_stub_providers = false

# Tags
tags = {
  Project     = "photo-editor"
  Owner       = "engineering"
  CostCenter  = "product"
  Environment = "dev"
}
