{
  "name": "photoeditor-monorepo",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "workspaces": [
    "shared",
    "backend",
    "mobile"
  ],
  "scripts": {
    "postinstall": "node scripts/ensure-pnpm-corepack.mjs",
    "build": "node_modules/.bin/turbo run build",
    "build:lambdas": "node_modules/.bin/turbo run build:lambdas --filter=@photoeditor/backend",
    "typecheck": "node_modules/.bin/turbo run typecheck",
    "lint": "node_modules/.bin/turbo run lint",
    "test": "node_modules/.bin/turbo run test",
    "test:contract": "node_modules/.bin/turbo run test:contract",
    "contracts:check": "node_modules/.bin/turbo run contracts:check --filter=@photoeditor/shared",
    "contracts:generate": "node_modules/.bin/turbo run contracts:generate --filter=@photoeditor/shared",
    "qa:static": "node_modules/.bin/turbo run qa:static",
    "qa:dependencies": "dependency-cruiser backend/src shared mobile/src --config tooling/dependency-rules.json",
    "qa:dead-exports": "ts-prune -p backend/tsconfig.json && ts-prune -p mobile/tsconfig.json && ts-prune -p shared/tsconfig.json",
    "qa:duplication": "jscpd --threshold 5 backend/src mobile/src shared",
    "qa": "node_modules/.bin/turbo run qa",
    "analyze:deps": "dependency-cruiser backend/src shared mobile/src --config tooling/dependency-rules.json --output-type dot | dot -T png > docs/evidence/import-graph.png && dependency-cruiser backend/src shared mobile/src --config tooling/dependency-rules.json --output-type metrics",
    "validate:deps": "dependency-cruiser backend/src shared mobile/src --config tooling/dependency-rules.json --output-type html > docs/evidence/dependency-cruiser-report.html && dependency-cruiser backend/src shared mobile/src --config tooling/dependency-rules.json --validate",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:status": "changeset status --since=main",
    "prepare": "husky"
  },
  "pnpm": {
    "packageManager": "pnpm@8.15.4",
    "peerDependencyRules": {
      "ignoreMissing": []
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@microsoft/api-extractor": "^7.43.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "dependency-cruiser": "^17.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.1.5",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^51.0.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "husky": "^9.1.7",
    "jscpd": "^4.0.5",
    "knip": "^5.0.0",
    "ts-prune": "^0.10.3",
    "turbo": "^2.5.8",
    "typescript": "^5.3.0"
  }
}
