{
  "name": "@photoeditor/shared",
  "version": "1.0.0",
  "description": "Shared schemas, types, and constants for photo editor application",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint {constants,schemas,types}/**/*.ts *.ts",
    "lint:fix": "eslint {constants,schemas,types}/**/*.ts *.ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "clean": "rm -rf dist",
    "api-extractor": "api-extractor run --local --verbose",
    "contracts:generate": "pnpm run build && NODE_PATH=node_modules:../node_modules node ../tooling/contracts/generate.js",
    "contracts:check": "node ../tooling/contract-check.js",
    "qa:static": "pnpm run typecheck && pnpm run lint",
    "qa:dependencies": "echo 'Shared: dependencies checked at root level'",
    "qa:dead-exports": "ts-prune -p tsconfig.json || true",
    "qa:duplication": "echo 'Shared: duplication checked at root level'",
    "qa": "pnpm run qa:static && pnpm run test"
  },
  "dependencies": {
    "@xstate/fsm": "^2.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.4",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.0.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.1.5",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^51.0.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "js-yaml": "^4.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.46.3",
    "zod-to-json-schema": "^3.24.6",
    "zod-to-ts": "^1.2.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "photo-editor",
    "schemas",
    "types",
    "shared"
  ],
  "author": "",
  "license": "MIT"
}
