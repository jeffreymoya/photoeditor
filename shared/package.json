{
  "name": "@photoeditor/shared",
  "version": "1.0.0",
  "description": "Shared schemas, types, and constants for photo editor application",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint {constants,schemas,types}/**/*.ts *.ts",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "clean": "rm -rf dist",
    "api-extractor": "api-extractor run --local --verbose",
    "contracts:generate": "npm run build && node ../tooling/contracts/generate.js",
    "contracts:check": "node ../tooling/contract-check.js"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.4",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "typescript": "^5.3.0",
    "zod-to-json-schema": "^3.24.6",
    "zod-to-ts": "^1.2.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "photo-editor",
    "schemas",
    "types",
    "shared"
  ],
  "author": "",
  "license": "MIT"
}
